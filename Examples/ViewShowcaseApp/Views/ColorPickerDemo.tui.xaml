<View x:Class="ViewShowcaseApp.Views.ColorPickerDemo"
      xmlns="http://schemas.gui-cs.github.io/tui/2026/xaml"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Width="60"
      Height="25">

  <Label Text="Full Color Picker (RGB/HSL/HSV)"
         X="2"
         Y="1" />

  <ColorPicker x:Name="FullColorPicker"
               X="2"
               Y="3"
               Width="40"
               Height="15"
               ValueChanged="OnFullValueChanged" />

  <Label x:Name="FullColorLabel"
         Text="Selected Color: None"
         X="2"
         Y="19" />

</View>
