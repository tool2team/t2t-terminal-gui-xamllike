<View x:Class="ViewShowcaseApp.Views.TabViewDemo"
      xmlns="http://schemas.gui-cs.github.io/tui/2026/xaml"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Width="60"
      Height="25">

  <TabView x:Name="DemoTabView"
           X="2"
           Y="2"
           Width="Dim.Fill(2)"
           Height="Dim.Fill(2)">

    <Tab DisplayText="User Profile">
      <Label Text="Name:"
             X="2"
             Y="2" />
      <TextField x:Name="NameField"
                 Text="John Doe"
                 X="10"
                 Y="2"
                 Width="30" />

      <Label Text="Email:"
             X="2"
             Y="4" />
      <TextField x:Name="EmailField"
                 Text="john.doe@example.com"
                 X="10"
                 Y="4"
                 Width="30" />

      <Label Text="Role:"
             X="2"
             Y="6" />
      <TextField x:Name="RoleField"
                 Text="Developer"
                 X="10"
                 Y="6"
                 Width="30" />
    </Tab>

    <Tab DisplayText="Settings">
      <CheckBox Text="Enable notifications"
                X="2"
                Y="2"
                Value="CheckState.Checked" />

      <CheckBox Text="Dark mode"
                X="2"
                Y="4"
                Value="CheckState.UnChecked" />

      <CheckBox Text="Auto-save"
                X="2"
                Y="6"
                Value="CheckState.Checked" />

      <Label Text="Theme:"
             X="2"
             Y="8" />
    </Tab>

    <Tab DisplayText="About">
      <Label Text="Application Information"
             X="2"
             Y="2" />

      <Label Text="Version: 1.0.0"
             X="2"
             Y="4" />

      <Label Text="Built with Terminal.Gui"
             X="2"
             Y="6" />

      <Label Text="Â© 2024 Sample Application"
             X="2"
             Y="8" />

      <Button Text="Check for Updates"
              X="2"
              Y="10"
              Accepting="OnCheckUpdates" />
    </Tab>

  </TabView>

</View>
