<Dialog x:Class="ViewShowcaseApp.Views.DialogDemoDlg"
        xmlns="http://schemas.gui-cs.github.io/tui/2026/xaml"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sample Dialog"
        Width="40"
        Height="15">

  <Label Text="Enter your name:"
         X="2"
         Y="2" />

  <TextField x:Name="NameTextField"
             X="2"
             Y="4"
             Width="Dim.Fill(2)" />

  <Label Text="Enter your email:"
         X="2"
         Y="6" />

  <TextField x:Name="EmailTextField"
             X="2"
             Y="8"
             Width="Dim.Fill(2)" />

  <Button Text="OK"
          X="Pos.Center() - 10"
          Y="Pos.Bottom(EmailTextField) + 2"
          IsDefault="true"
          Accepting="OnOk" />

  <Button Text="Cancel"
          X="Pos.Center() + 2"
          Y="Pos.Bottom(EmailTextField) + 2"
          Accepting="OnCancel" />

</Dialog>
