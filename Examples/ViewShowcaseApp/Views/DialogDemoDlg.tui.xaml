<Dialog x:Class="ViewShowcaseApp.Views.DialogDemoDlg"
        xmlns="http://schemas.gui-cs.github.io/tui/2026/xaml"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sample Dialog"
        Width="40"
        Height="20">

  <Label Text="Enter your name:"
         X="2"
         Y="2" />

  <TextField x:Name="NameTextField"
             X="2"
             Y="4"
             Width="Dim.Fill(2)" />

  <Label Text="Enter your email:"
         X="2"
         Y="6" />

  <TextField x:Name="EmailTextField"
             X="2"
             Y="8"
             Width="Dim.Fill(2)" />

	<Button x:Name="ResetButton"
		Text="Reset"
		X="Pos.Center()"
        Y="Pos.Bottom(EmailTextField) + 2"
		Accepting="OnReset" />
	
  <Button Text="OK"
          IsDefault="true"
		  IsDialogButton="True"
          Accepting="OnOk" />

  <Button Text="Cancel"
		  IsDialogButton="True"
          Accepting="OnCancel" />

</Dialog>
