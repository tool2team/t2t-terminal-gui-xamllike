<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://schemas.gui-cs.github.io/tui/2026/xaml"
           xmlns="http://schemas.gui-cs.github.io/tui/2026/xaml"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           elementFormDefault="qualified">

  <!-- Import XAML namespace for x:Name, x:Class, etc. -->
  <xs:import namespace="http://schemas.microsoft.com/winfx/2006/xaml" 
             schemaLocation="xaml-2006.xsd"/>

  <!-- Common attributes for all controls -->
  <xs:attributeGroup name="CommonAttributes">
    <xs:attribute name="X" type="xs:string">
      <xs:annotation>
        <xs:documentation>Horizontal position (e.g., "2", "Pos.Center()")</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="Y" type="xs:string">
      <xs:annotation>
        <xs:documentation>Vertical position (e.g., "5", "Pos.Bottom(Root) - 3")</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="Width" type="xs:string">
      <xs:annotation>
        <xs:documentation>Width dimension (e.g., "20", "Dim.Fill()")</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="Height" type="xs:string">
      <xs:annotation>
        <xs:documentation>Height dimension (e.g., "10", "Dim.Fill()")</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="Enabled" type="xs:string">
      <xs:annotation>
        <xs:documentation>Enabled state (true/false or binding)</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="Visible" type="xs:string">
      <xs:annotation>
        <xs:documentation>Visibility state (true/false or binding)</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute ref="x:Name"/>
    <xs:attribute ref="x:Type"/>
  </xs:attributeGroup>

  <!-- Root element attributes for classes with code-behind -->
  <xs:attributeGroup name="RootElementAttributes">
    <xs:attribute ref="x:Class"/>
    <xs:attribute ref="x:DataType"/>
  </xs:attributeGroup>

  <!-- Container Views Choice Group -->
  <xs:group name="ContainerViews">
    <xs:choice>
      <!-- Basic Controls -->
      <xs:element ref="Label"/>
      <xs:element ref="Button"/>
      <xs:element ref="TextField"/>
      <xs:element ref="TextView"/>
      <xs:element ref="CheckBox"/>
      <!-- Selectors -->
      <xs:element ref="OptionSelector"/>
      <xs:element ref="FlagSelector"/>
      <xs:element ref="ListView"/>
      <!-- Containers -->
      <xs:element ref="FrameView"/>
      <xs:element ref="TabView"/>
      <xs:element ref="Tab"/>
      <xs:element ref="Dialog"/>
      <!-- Data Entry -->
      <xs:element ref="DateField"/>
      <xs:element ref="TimeField"/>
      <xs:element ref="DatePicker"/>
      <xs:element ref="TextValidateField"/>
      <xs:element ref="NumericUpDown"/>
      <!-- Visual Elements -->
      <xs:element ref="ProgressBar"/>
      <xs:element ref="Line"/>
      <xs:element ref="SpinnerView"/>
      <xs:element ref="ColorPicker"/>
      <xs:element ref="ColorPicker16"/>
      <!-- Data Display -->
      <xs:element ref="TableView"/>
      <xs:element ref="TreeView"/>
      <xs:element ref="GraphView"/>
      <xs:element ref="CharMap"/>
      <xs:element ref="HexView"/>
      <!-- Navigation -->
      <xs:element ref="MenuBar"/>
      <xs:element ref="Menu"/>
      <xs:element ref="StatusBar"/>
      <xs:element ref="Bar"/>
      <xs:element ref="Shortcut"/>
      <!-- Dialogs -->
      <xs:element ref="OpenDialog"/>
      <xs:element ref="SaveDialog"/>
      <xs:element ref="FileDialog"/>
      <!-- Advanced -->
      <xs:element ref="Wizard"/>
      <xs:element ref="WizardStep"/>
      <xs:element ref="ScrollBar"/>
      <xs:element ref="LinearRange"/>
    </xs:choice>
  </xs:group>

  <!-- Window element -->
  <xs:element name="Window">
    <xs:annotation>
      <xs:documentation>Main window container. See Terminal.Gui.Views.Window</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:group minOccurs="0" maxOccurs="unbounded" ref="ContainerViews"/>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attributeGroup ref="RootElementAttributes"/>
      <xs:attribute name="Title" type="xs:string">
        <xs:annotation>
          <xs:documentation>Window title</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- View element -->
  <xs:element name="View">
    <xs:annotation>
      <xs:documentation>Base view container. Can contain any Terminal.Gui controls. See Terminal.Gui.ViewBase.View</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:group minOccurs="0" maxOccurs="unbounded" ref="ContainerViews"/>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attributeGroup ref="RootElementAttributes"/>
    </xs:complexType>
  </xs:element>

  <!-- Label element -->
  <xs:element name="Label">
    <xs:annotation>
      <xs:documentation>Text label control. See Terminal.Gui.Views.Label</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Display text or binding (e.g., "{Bind Status}")</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- Button element -->
  <xs:element name="Button">
    <xs:annotation>
      <xs:documentation>Clickable button control. See Terminal.Gui.Views.Button</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Button text</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Command" type="xs:string">
        <xs:annotation>
          <xs:documentation>ICommand binding (e.g., "{Bind SaveCommand}")</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Accepting" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for button click (recommended)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Clicked" type="xs:string">
        <xs:annotation>
          <xs:documentation>⚠️ OBSOLETE: Use 'Accepting' instead. Event handler for button click (legacy)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- TextField element -->
  <xs:element name="TextField">
    <xs:annotation>
      <xs:documentation>Single-line text input field. See Terminal.Gui.Views.TextField</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Text content or binding (e.g., "{Bind UserName, Mode=TwoWay}")</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ReadOnly" type="xs:string">
        <xs:annotation>
          <xs:documentation>Whether the field is read-only (true/false or binding)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="TextChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for text changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- TextView element -->
  <xs:element name="TextView">
    <xs:annotation>
      <xs:documentation>Multi-line text area. See Terminal.Gui.Views.TextView</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Text content or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="TextChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for text changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- CheckBox element -->
  <xs:element name="CheckBox">
    <xs:annotation>
      <xs:documentation>Checkbox control. See Terminal.Gui.Views.CheckBox</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Checkbox label</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Checked" type="xs:string">
        <xs:annotation>
          <xs:documentation>Checked state or binding (e.g., "{Bind IsEnabled, Mode=TwoWay}")</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ValueChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for state changes (recommended)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Toggled" type="xs:string">
        <xs:annotation>
          <xs:documentation>⚠️ OBSOLETE: Use 'ValueChanged' instead. Event handler for state changes (legacy)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- OptionSelector element -->
  <xs:element name="OptionSelector">
    <xs:annotation>
      <xs:documentation>Generic option selector. See Terminal.Gui.Views.OptionSelector&lt;T&gt;</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Value" type="xs:string">
        <xs:annotation>
          <xs:documentation>Selected value or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="SelectedItemChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for selection changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- ListView element -->
  <xs:element name="ListView">
    <xs:annotation>
      <xs:documentation>List view control. See Terminal.Gui.Views.ListView</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>

      <!-- Properties -->
      <xs:attribute name="Source" type="xs:string">
        <xs:annotation>
          <xs:documentation>Gets or sets the IListDataSource backing this ListView, enabling custom rendering</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Value" type="xs:string">
        <xs:annotation>
          <xs:documentation>Gets or sets the index of the currently selected item or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="SelectedItem" type="xs:string">
        <xs:annotation>
          <xs:documentation>Convenience property that is an alias for Value. Get or set the index of the currently selected item</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="TopItem" type="xs:string">
        <xs:annotation>
          <xs:documentation>Gets or sets the index of the item that will appear at the top of the Viewport</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ShowMarks" type="xs:string">
        <xs:annotation>
          <xs:documentation>Gets or sets whether mark glyphs (checkboxes/radio buttons) are visually displayed (true/false)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="MarkMultiple" type="xs:string">
        <xs:annotation>
          <xs:documentation>Gets or sets whether multiple items can be marked simultaneously (true/false)</xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <!-- Events -->
      <xs:attribute name="ValueChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for selection changes (recommended)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ValueChanging" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler raised when the ListView Value/SelectedItem is changing</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="SourceChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler raised when the Source data is changed</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="CollectionChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler raised when an item is added, removed, or moved, or the entire list is refreshed</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="RowRender" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler invoked when this ListView is being drawn before rendering</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="SelectedItemChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>⚠️ OBSOLETE: Use 'ValueChanged' instead. Event handler for selection changes (legacy)</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- FrameView element -->
  <xs:element name="FrameView">
    <xs:annotation>
      <xs:documentation>Container with border. See Terminal.Gui.Views.FrameView</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:group minOccurs="0" maxOccurs="unbounded" ref="ContainerViews"/>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Title" type="xs:string">
        <xs:annotation>
          <xs:documentation>Frame title</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- Bar element -->
  <xs:element name="Bar">
    <xs:annotation>
      <xs:documentation>Horizontally or vertically oriented container for Shortcuts. See Terminal.Gui.Views.Bar</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="Shortcut"/>
      </xs:sequence>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Orientation" type="xs:string">
        <xs:annotation>
          <xs:documentation>Horizontal or Vertical orientation</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- CharMap element -->
  <xs:element name="CharMap">
    <xs:annotation>
      <xs:documentation>Scrollable map of Unicode codepoints. See Terminal.Gui.Views.CharMap</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="StartCodePoint" type="xs:string">
        <xs:annotation>
          <xs:documentation>Starting Unicode code point</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- ColorPicker element -->
  <xs:element name="ColorPicker">
    <xs:annotation>
      <xs:documentation>Color picker supporting RGB, HSL, and HSV color models. See Terminal.Gui.Views.ColorPicker</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="SelectedColor" type="xs:string">
        <xs:annotation>
          <xs:documentation>Selected color or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ColorChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for color changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- ColorPicker16 element -->
  <xs:element name="ColorPicker16">
    <xs:annotation>
      <xs:documentation>Simple color picker for legacy 16 ANSI colors. See Terminal.Gui.Views.ColorPicker16</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="SelectedColor" type="xs:string">
        <xs:annotation>
          <xs:documentation>Selected color or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ColorChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for color changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- DateField element -->
  <xs:element name="DateField">
    <xs:annotation>
      <xs:documentation>Date editing field with specialized cursor behavior. See Terminal.Gui.Views.DateField</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Date" type="xs:string">
        <xs:annotation>
          <xs:documentation>Date value or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Format" type="xs:string">
        <xs:annotation>
          <xs:documentation>Date format string</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="DateChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for date changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- DatePicker element -->
  <xs:element name="DatePicker">
    <xs:annotation>
      <xs:documentation>Visual calendar for date selection. See Terminal.Gui.Views.DatePicker</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Date" type="xs:string">
        <xs:annotation>
          <xs:documentation>Selected date or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="DateChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for date changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- Dialog element -->
  <xs:element name="Dialog">
    <xs:annotation>
      <xs:documentation>Modal dialog window with buttons. See Terminal.Gui.Views.Dialog</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:group minOccurs="0" maxOccurs="unbounded" ref="ContainerViews"/>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attributeGroup ref="RootElementAttributes"/>
      <xs:attribute name="Title" type="xs:string">
        <xs:annotation>
          <xs:documentation>Dialog title</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- FileDialog element -->
  <xs:element name="FileDialog">
    <xs:annotation>
      <xs:documentation>Base class for file dialogs. See Terminal.Gui.Views.FileDialog</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Directory" type="xs:string">
        <xs:annotation>
          <xs:documentation>Current directory</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="FileName" type="xs:string">
        <xs:annotation>
          <xs:documentation>Selected file name</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- FlagSelector element -->
  <xs:element name="FlagSelector">
    <xs:annotation>
      <xs:documentation>Multi-select flag selector. See Terminal.Gui.Views.FlagSelector</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Value" type="xs:string">
        <xs:annotation>
          <xs:documentation>Selected flags value or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="FlagsChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for flag changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- GraphView element -->
  <xs:element name="GraphView">
    <xs:annotation>
      <xs:documentation>Graph display with flexible scaling and scrolling. See Terminal.Gui.Views.GraphView</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Title" type="xs:string">
        <xs:annotation>
          <xs:documentation>Graph title</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- HexView element -->
  <xs:element name="HexView">
    <xs:annotation>
      <xs:documentation>Hex editor with hex and ASCII views. See Terminal.Gui.Views.HexView</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Source" type="xs:string">
        <xs:annotation>
          <xs:documentation>Data source stream or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- Line element -->
  <xs:element name="Line">
    <xs:annotation>
      <xs:documentation>Single line drawing element. See Terminal.Gui.Views.Line</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Orientation" type="xs:string">
        <xs:annotation>
          <xs:documentation>Horizontal or Vertical</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="LineStyle" type="xs:string">
        <xs:annotation>
          <xs:documentation>Line drawing style</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- LinearRange element -->
  <xs:element name="LinearRange">
    <xs:annotation>
      <xs:documentation>Linear range control for typed options. See Terminal.Gui.Views.LinearRange</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Value" type="xs:string">
        <xs:annotation>
          <xs:documentation>Current value or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="ValueChanged" type="xs:string">
        <xs:annotation>
          <xs:documentation>Event handler for value changes</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- Menu element -->
  <xs:element name="Menu">
    <xs:annotation>
      <xs:documentation>Vertical menu container. See Terminal.Gui.Views.Menu</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="MenuItem"/>
      </xs:sequence>
      <xs:attributeGroup ref="CommonAttributes"/>
    </xs:complexType>
  </xs:element>

  <!-- MenuBar element -->
  <xs:element name="MenuBar">
    <xs:annotation>
      <xs:documentation>Horizontal menu bar. See Terminal.Gui.Views.MenuBar</xs:documentation>
    </xs:annotation>
    <xs:complexType mixed="true">
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="MenuBarItem"/>
      </xs:sequence>
      <xs:attributeGroup ref="CommonAttributes"/>
    </xs:complexType>
  </xs:element>

  <!-- MenuBarItem element -->
  <xs:element name="MenuBarItem">
    <xs:annotation>
      <xs:documentation>Menu bar item with popover menu. See Terminal.Gui.Views.MenuBarItem</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Menu item text</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="HotKey" type="xs:string">
        <xs:annotation>
          <xs:documentation>Hot key for activation</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- MenuItem element -->
  <xs:element name="MenuItem">
    <xs:annotation>
      <xs:documentation>Menu item with title and action. See Terminal.Gui.Views.MenuItem</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Text" type="xs:string">
        <xs:annotation>
          <xs:documentation>Menu item text</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="HotKey" type="xs:string">
        <xs:annotation>
          <xs:documentation>Hot key for activation</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Help" type="xs:string">
        <xs:annotation>
          <xs:documentation>Help text</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Action" type="xs:string">
        <xs:annotation>
          <xs:documentation>Action to execute</xs:documentation>
        </xs:annotation>
      </xs:attribute>
    </xs:complexType>
  </xs:element>

  <!-- NumericUpDown element -->
  <xs:element name="NumericUpDown">
    <xs:annotation>
      <xs:documentation>Numeric up/down control. See Terminal.Gui.Views.NumericUpDown</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:attributeGroup ref="CommonAttributes"/>
      <xs:attribute name="Value" type="xs:string">
        <xs:annotation>
          <xs:documentation>Numeric value or binding</xs:documentation>
        </xs:annotation>
      </xs:attribute>
      <xs:attribute name="Minimum" type="xs:string">
